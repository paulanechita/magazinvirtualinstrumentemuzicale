@model IEnumerable<MVIM.DAL.Produs>

@{
    ViewBag.Title = "AfisareProduse";
}

<h2>AfisareProduse</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                Numele Produsului: @item.NumeProdus
                <br />
                Pretul Produsului:   @item.PretProdus
                <br />
                <br />
            </td>
            <td>
                @Html.ActionLink("Editeaza", "EditeazaProdus", "AdminProduse", new { id = item.IdProdus }, null) |

                @Html.ActionLink("Delete", "StergeProdus", "AdminProduse", new { id = item.IdProdus }, null)
            </td>
        </tr>
    }

</table>
