@model MagazinVirtualInstrMuzicale.Models.AfisareProduse

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img class="poza" src='/Home/LoadPicture?id=@Model.ListaProduse.FirstOrDefault().PozaProdus.FirstOrDefault().IdPozaProdus'>
        </div>
        @foreach (var item in Model.ListaProduse.Skip(1))
        {
            <div class="item">
                <img class="poza" src='/Home/LoadPicture?id=@item.PozaProdus.FirstOrDefault().IdPozaProdus'>
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div id="indexContent">
    @{
        ViewBag.Title = "AfisareProduse";
    }

    <h2 style="text-align:center">Produse</h2>
    <br />
    Filtrare dupa Categorie:
    <br />
    @Html.DropDownListFor(m => m.IdCategorieSelectata, new SelectList(Model.CategoriiProduse, "IdCategorie", "NumeCategorie"), "  --Selecteaza Categoria--  ", new { id = "categoryFilterId" })
    <br />
    
    <div id="renderTablePartialView">@{ Html.RenderPartial("_productTablePartialView", Model); }</div>
</div>