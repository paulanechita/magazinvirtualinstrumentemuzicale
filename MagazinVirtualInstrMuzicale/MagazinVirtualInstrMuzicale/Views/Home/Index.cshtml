                }
            </ul>
            <br />
            Pret
            <a href="#" class="list-group-item pretFilterClass">Crescator</a>
            <a href="#" class="list-group-item pretFilterClass">Descrescator</a>
        </div>
        <div class="col-sm-10" id="renderTablePartialView">@{ Html.RenderPartial("_productTablePartialView", Model); }</div>
    </div>
</div>

